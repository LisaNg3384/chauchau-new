    margin-right: 10px;
    }
    .pagination {
    float: right;
    margin: 0 0 5px;
    }
    .pagination li a {
    border: none;
    font-size: 13px;
    min-width: 30px;
    min-height: 30px;
    color: #999;
    margin: 0 2px;
    line-height: 30px;
    border-radius: 2px !important;
    text-align: center;
    padding: 0 6px;
    
    .pagination li a:hover {
    color: #666;
    }
    .pagination li.active a,
    .pagination li.active a.page-link {
    background: #03A9F4;
    }
    .pagination li.active a:hover {
    background: #0397d6;
    }
    .pagination li.disabled i {
    color: #ccc;
    }
    .pagination li i {
    font-size: 16px;
    padding-top: 6px
    }
    .hint-text {
    float: left;
    margin-top: 10px;
    font-size: 13px;
    }
    .custom-checkbox {
    position: relative;
    }
    .custom-checkbox input[type="checkbox"] {
    opacity: 0;
    position: absolute;
    margin: 5px 0 0 3px;
    z-index: 9;
    }
    .custom-checkbox label:before {
    width: 18px;
    height: 18px;
    content: '';
    margin-right: 10px;
    display: inline-block;
    vertical-align: text-top;
    background: white;
    border: 1px solid #bbb;
    border-radius: 2px;
    box-sizing: border-box;
    z-index: 2;
    }
    .custom-checkbox input[type="checkbox"]:checked+label:after {
    content: '';
    position: absolute;
    left: 6px;
    top: 3px;
    width: 6px;
    height: 11px;
    border: solid #000;
    border-width: 0 3px 3px 0;
    transform: inherit;
    z-index: 3;
    transform: rotateZ(45deg);
    }
    .custom-checkbox input[type="checkbox"]:checked+label:before {
    border-color: #03A9F4;
    background: #03A9F4;
    }
    .custom-checkbox input[type="checkbox"]:checked+label:after {
    border-color: #fff;
    }
    .custom-checkbox input[type="checkbox"]:disabled+label:before {
    color: #b8b8b8;
    cursor: auto;
    box-shadow: none;
    background: #ddd;
    }
    /* Modal styles */
    .modal .modal-dialog {
    max-width: 400px;
    }
    .modal .modal-header,
    .modal .modal-body,
    .modal .modal-footer {
    padding: 20px 30px;
    }
    .modal .modal-content {
    border-radius: 3px;
    }
    .modal .modal-footer {
    background: #ecf0f1;
    border-radius: 0 0 3px 3px;
    }
    .modal .modal-title {
    display: inline-block;
    }
    .modal .form-control {
    border-radius: 2px;
    box-shadow: none;
    border-color: #dddddd;
    }
    .modal textarea.form-control {
    resize: vertical;
    }
    .modal .btn {
    border-radius: 2px;
    min-width: 100px;
    }
    .modal form label {
    font-weight: normal;
    }
    /*Sort*/
    table.dataTable thead .sorting:after,
    table.dataTable thead .sorting:before,
    table.dataTable thead .sorting_asc:after,
    table.dataTable thead .sorting_asc:before,
    table.dataTable thead .sorting_asc_disabled:after,
    table.dataTable thead .sorting_asc_disabled:before,
    table.dataTable thead .sorting_desc:after,
    table.dataTable thead .sorting_desc:before,
    table.dataTable thead .sorting_desc_disabled:after,
    table.dataTable thead .sorting_desc_disabled:before {
    bottom: .5em;
    }
  script.
    $(document).ready(function () {
    //Data tabble
    $('#leadTable').DataTable({
    "scrollX": true,
    columnDefs: [{
    orderable: false,
    targets: 0
    }]
    });
    //$('.dataTables_length').addClass('bs-select');
    //Select all checkbox
    $("#selectAll").click(function () {
    $("input[type=checkbox]").prop('checked', $(this).prop('checked'));
    });
    });
    //get id of lead transaction in anchor to delete Modal
    $(document).on("click", ".delete", function () {
    var leadId = $(this).data('id');
    $(".modal-body #leadId").val( leadId );
    $('#deleteTransaction').modal('show');
    });

    $(document).on("click","#deleteSelect", function () {
    var idArray = "";
    $('input[type="checkbox"]').each(function(){
    if($(this). prop("checked") == true && this.id != "selectAll"){
    idArray += $(this).data('id') + ',';
    }
    });
    idArray = idArray.substring(0, idArray.length - 1);
    $(".modal-body #leadId").val(idArray);
    $('#deleteTransaction').modal('show');
    });    
block content
    .container
      .table-wrapper
        .table-title
          .row
            .col-sm-6
              h2 Lead
            .col-sm-6
              button.btn.btn-danger.active(type='button', id="deleteSelect", data-toggle='modal', data-target='#deleteTransaction')
                | Delete
              button.btn.btn-success.active(type='button', data-toggle='modal', data-target='#addTransaction')
                | Add
      table#leadTable.table.table-hover.table-stripped.table-sm(width='100%')
        thead
          tr
            th(scope='col')
              span.custom-checkbox
                input#selectAll(type='checkbox')
                label(for='selectAll')  
            th(scope='col') Name
            th(scope='col') Insured Property
            th(scope='col') Current Premium
            th(scope='col') New Premium
            th(scope='col') Beatable?
            th(scope='col') Loan Purpose
            th(scope='col') Loan Processor
            th(scope='col') Action
        tbody
          each lead in leads
            - var idLead = lead._id
            tr
              td
                span.custom-checkbox
                  input#id(type='checkbox', data-id= idLead, name=idLead, value=idLead)
                  label(for='checkbox1')
              td= lead.firstName + ' ' + lead.lastName + idLead
              td= lead.insuredProperty
              td= lead.currentPremium
              td= lead.newPremium
              td= lead.beatable
              td= lead.loanPurpose
              td= lead.loanProcessor
              //td= lead.email
              td
                a.edit(href='#editEmployeeModal', data-toggle='modal',id="editId"+ idLead,data-testid=count, data-userName=user.email)
                  i.material-icons(data-toggle='tooltip', title='Edit') 
                a.delete(href='#deleteTransaction', data-toggle='modal', data-id= idLead, name=idLead )
                  i.material-icons(data-toggle='tooltip', title='Delete') 
      //Add modal
      #addTransaction.modal.fade(tabindex='-1')
        .modal-dialog.modal-dialog-centered
          .modal-content
            form(method='POST', action='/createLeadTransaction')
              .modal-header
                h4.modal-title Add Transaction
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
              input(type='hidden', name='_csrf', value=_csrf)
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='firstName') First Name
                .col-md-7
                  input#firstName.form-control(type='text', name='firstName', placeholder='First Name', autofocus='autofocus', autocomplete='on', required='required')
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='lastName') Last Name
                .col-md-7
                  input#lastName.form-control(type='text', name='lastName', placeholder='Last Name', autocomplete='on', required='required')
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='dob')  Date of Birth
                .col-md-7
                  input#dob.form-control(type='date', name='dob', placeholder='Date of Birth', autocomplete='off', required='required')
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='gender')  Gender
                .col-md-7
                  //input#gender.form-control(type='text', name='gender', placeholder='Gender', autocomplete='off', //required='required')
                  select#gender.form-control(name='gender', required='required')
                    option Female
                    option Male
                    option Other
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='phoneNumber')  Phone Number
                .col-md-7
                  input#phoneNumber.form-control(type='tel', name='phoneNumber', placeholder='Phone Number', autocomplete='off', required='required')
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='mailingAddress') Mailing Address
                .col-md-7
                  input#mailingAddress.form-control(type='text', name='mailingAddress', placeholder='Mailing Address', autocomplete='on', required='required')
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='insuredProperty')  Insured Property Address
                .col-md-7
                  input#insuredProperty.form-control(type='text', name='insuredProperty', placeholder='Insured Property Address', autocomplete='on', required='required')
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='propertyType')  Property Type
                .col-md-7
                  //input#propertyType.form-control(type='text', name='propertyType', placeholder='Property Type', autocomplete='off', //required='required')
                  select#gender.form-control(name='propertyType', required='required')
                    option Single Family Residence
                    option Condominium
                    option Townhouse/PUD
                    option Duplex
                    option Triplex
                    option Fourplex
                    option Manuf Housing
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='occupancy')  Occupancy
                .col-md-7
                  //input#occupancy.form-control(type='text', name='occupancy', placeholder='Occupancy', autocomplete='off', //required='required')
                  select#Occupancy.form-control(name='occupancy', required='required')
                    option Owner Occupied
                    option Second Home
                    option Invesstment
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='loanPurpose')  Loan Purpose
                .col-md-7
                  select#loanPurpose.form-control(name='loanPurpose', required='required')
                    option Purchase
                    option Refinance
              .form-group.row
                label.col-md-3.col-form-label.font-weight-bold.text-right(for='email')  Email
                .col-md-7
                  input#email.form-control(type='email', name='email', placeholder='Email', autofocus='autofocus', autocomplete='email', required='required')
              .modal-footer
                input.btn.btn-default(type='button', data-dismiss='modal', value='Cancel')
                input.btn.btn-success(type='submit', value='Add')
      //Delete
      #deleteTransaction.modal.fade
        .modal-dialog
          .modal-content
            form(method='POST', action='/deleteLeadTransaction')
              .modal-header
                h4.modal-title Delete Transaction
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
              input(type='hidden', name='_csrf', value=_csrf)
              .modal-body
                input#leadId(type='hidden', name='leadId', value='')
                p Are you sure you want to delete these Records
                p.text-warning
                  small This action cannot be undone.
              .modal-footer
                input.btn.btn-default(type='button', data-dismiss='modal', value='Cancel')
                input.btn.btn-danger(type='submit', value='Delete')
